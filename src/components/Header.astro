<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="flex items-center">
      <a href="/" class="text-2xl font-bold text-primary-600">Travel Blog</a>
    </div>
    
    <nav class="hidden md:flex space-x-6">
      <a href="/" class="text-gray-600 hover:text-primary-600">Home</a>
      <a href="/destinations" class="text-gray-600 hover:text-primary-600">Destinations</a>
      <a href="/categories" class="text-gray-600 hover:text-primary-600">Categories</a>
      <a href="/about" class="text-gray-600 hover:text-primary-600">About</a>
    </nav>
    
    <div class="flex items-center space-x-4">
      <a href="/login" class="text-gray-600 hover:text-primary-600">Login</a>
      <a href="/register" class="btn btn-primary">Sign Up</a>
      
      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/" class="block px-3 py-2 text-gray-600 hover:text-primary-600">Home</a>
      <a href="/destinations" class="block px-3 py-2 text-gray-600 hover:text-primary-600">Destinations</a>
      <a href="/categories" class="block px-3 py-2 text-gray-600 hover:text-primary-600">Categories</a>
      <a href="/about" class="block px-3 py-2 text-gray-600 hover:text-primary-600">About</a>
    </div>
  </div>
</header>

<script>
  // Toggle mobile menu
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
  });
</script>
